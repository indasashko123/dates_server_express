{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "outDir": "./dist",
      "experimentalDecorators": true,
      "esModuleInterop": true,      
      "baseUrl": "./",      
      "paths": {
        "@domain" : [
          "src/domain/index"
        ],
        "@database" : [
          "src/database/index"
        ],
        "@app" : [
          "src/app/index"
        ],
        "@config" : [
          "src/config/index"
        ],
      }      
    },
    "exclude": [
      "node_modules",
      "./dist"
    ]
}